import Game;
import Graphics2D;

function main() {
	
	window = new GameWindow("Grandma's Pokemon", 60, 960, 600);
	
	mouseLocation = [0, 0];
	mousePressed = false;
	
	count = 10;
	
	while (true) {
		for (event : window.pumpEvents()) {
			switch (event.type) {
				case EventType.QUIT:
					return;
				
				case EventType.MOUSE_MOVE:
					mouseLocation[0] = event.x;
					mouseLocation[1] = event.y;
					break;
				
				case EventType.MOUSE_LEFT_DOWN:
				case EventType.MOUSE_LEFT_UP:
					mousePressed = event.down;
					break;
					
				default:
					break;
			}
		}
		
		Draw.fill(40, 40, 40);
		
		Draw.rectangle(
			count, 10,  // x y
			100, 100, // width height
			255, 0, 0); // RGB
		count++;
			
		window.clockTick();
	}
}
